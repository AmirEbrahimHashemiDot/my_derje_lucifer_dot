        private void getAllProductsByID() {

            StringRequest stringRequest = new StringRequest(Request.Method.GET, public_recy_pro_api_url, new Response.Listener<String>() {
                @Override
                public void onResponse(String response) {
                    try {
                        JSONArray jsonArray = new JSONArray(response);
                        //mExampleList_Pro = new ArrayList<ExampleItem_ProModel>();
                        for (int i = 0; i < response.length(); i++) {
                            JSONObject jsonObject = jsonArray.getJSONObject(i);
                            //ExampleItem_ProModel exampleModel_pro = mExampleList_Pro.get(i);

                            exampleModel_pro.set$id(jsonObject.getInt("$id"));
                            exampleModel_pro.setProductName(jsonObject.getString("ProductName"));
                            exampleModel_pro.setSupplier(jsonObject.getString("Supplier"));
                            exampleModel_pro.setProID(jsonObject.getInt("proID"));

                            int $Id = jsonObject.getInt("$id");
                            String ProductName = jsonObject.getString("ProductName");
                            String Supplier = jsonObject.getString("Supplier");
                            int proid = jsonObject.getInt("proID");

                            //mExampleList_Pro.add(new ExampleItem_ProModel($Id, ProductName, Supplier));
                            mExampleList_Pro.add(new ExampleItem_ProModel(exampleModel_pro.get$id(), exampleModel_pro.getProductName(), exampleModel_pro.getSupplier(), exampleModel_pro.getProID()));

                            Timer timer = new Timer();
                            timer.scheduleAtFixedRate(new TimerTask() {
                                @Override
                                public void run() {
                                    runOnUiThread(new Runnable() {
                                        @Override
                                        public void run() {
                                            if (mExampleList_Pro.size() != 0) {
                                                if (flag_for_click == true) {
                                                    //mExampleList_Pro.clear();
                                                    ryscrview_product.setAdapter(new ExampleAdapter_ProRyv(SefareshGozariActivity.this, mExampleList_Pro));
                                                    //mExampleAdapter_ProRyv.setOnItemClickListener(SefareshGozariActivity.this);
                                                    adapterIsSet_flag = true;
                                                    //Toast.makeText(SefareshGozariActivity.this, "name : " + cat_name + " id : " + ID, Toast.LENGTH_SHORT).show();
                                                    flag_for_click = false;
                                                }
                                                mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                                            }
                                            mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                                        }
                                    });
                                    mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                                }
                            }, 1, 100);
                            if (adapterIsSet_flag == true) {
                                mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                                timer.cancel();
                                //Toast.makeText(this, "timer.cancel", Toast.LENGTH_SHORT).show();
                                Log.d("timer_cancel", "timer is canceled");
                            }

                            /*exampleModel_pro.set$id(jsonObject.getInt("$id"));
                            exampleModel_pro.setProductName(jsonObject.getString("ProductName"));
                            exampleModel_pro.setSupplier(jsonObject.getString("Supplier"));*/
                            //Toast.makeText(SefareshGozariActivity.this, ProductName + " | " +Supplier, Toast.LENGTH_SHORT).show();
                            //Toast.makeText(SefareshGozariActivity.this, "got response", Toast.LENGTH_SHORT).show();
                        }
                        //mExampleAdapter_ProRyv = new ExampleAdapter_ProRyv(SefareshGozariActivity.this, mExampleList_Pro);
                        //ryscrview_product.setAdapter(mExampleAdapter_ProRyv);
                        //mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                        mExampleAdapter_ProRyv.setOnItemClickListenerPro(SefareshGozariActivity.this);
                    } catch (JSONException e) {
                        //Toast.makeText(SefareshGozariActivity.this, "failed", Toast.LENGTH_SHORT).show();
                        e.printStackTrace();
                    }
                }
            }, new Response.ErrorListener() {
                @Override
                public void onErrorResponse(VolleyError error) {
                    Toast.makeText(SefareshGozariActivity.this, error.getMessage(), Toast.LENGTH_SHORT).show();
                    Toast.makeText(SefareshGozariActivity.this, "got error", Toast.LENGTH_SHORT).show();
                }
            }) {
                Map<String, String> params = new HashMap<>();

                @Override
                public Map<String, String> getParams() {
                    params.put("ID", ID2_);
                    return params;
                }
            };
            RequestQueue requestQueue = Volley.newRequestQueue(getApplicationContext());
            requestQueue.add(stringRequest);
        }

        @Override
        public void onItemClickPro(int position_pro) {
            //ExampleItem_model exampleModel_cat = mExampleList.get(position);
            try {
                ExampleItem_ProModel exampleModel_pro = mExampleList_Pro.get(position_pro);
                Toast.makeText(sefareshGozariActivity, "position: " + position_pro, Toast.LENGTH_SHORT).show();
            } catch (Exception ee) {
                Log.i("notCLICKED", "onItemClickPro: ");
                ee.printStackTrace();
            }
        }

