<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="80"
                android:maxLines="1"
                android:id="@+id/editTextTextPersonName"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttxt_login_signin_shape"
                android:ems="10"
                android:fontFamily="@font/iransans"
                android:hint="نام"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.941"
                tools:text="نام" />

            <EditText
                android:maxLength="11"
                android:maxLines="1"
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/edttxt_login_signin_shape"
                android:ems="10"
                android:fontFamily="@font/iransans"
                android:hint="شماره تلفن"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="شماره تلفن" />

            <EditText
                android:maxEms="55"
                android:maxLength="240"
                android:maxLines="5"
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginBottom="180dp"
                android:background="@drawable/edttxt_login_signin_shape"
                android:ems="10"
                android:fontFamily="@font/iransans"
                android:hint="متن انتقاد"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="متن پیشنهاد" />

            <EditText
                android:maxLength="80"
                android:maxLines="1"
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edttxt_login_signin_shape"
                android:ems="10"
                android:fontFamily="@font/iransans"
                android:hint="نام خانوادگی"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:text="نام خانوادگی" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_signin_shape"
        android:fontFamily="@font/iransans"
        android:text="ارسال"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />


</androidx.constraintlayout.widget.ConstraintLayout>