            getAllProductsByID();
            txt_test_var.setText(exampleModel_cat.getName());

            Toast.makeText(getApplicationContext(),
                    "Name: " + exampleModel_cat.getName() + " ID: " +
                            exampleModel_cat.getID() + " id: " +
                            exampleModel_cat.get$id(), Toast.LENGTH_SHORT).show();

